<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="repository.powlo"
  name="powlo Add-ons"
  version="0.0.1"
  provider-name="powlo">
  <extension point="xbmc.addon.repository"
             name="powlo's Add-on Repository">
    <info compressed="true">path to addons.xml on github</info>
    <checksum>path to addons.xml.md5 on github</checksum>
    <datadir zip="true">path to download directory containing addon zips on github</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Install Add-ons from powlo's repository</summary>
    <description lang="en">Download and install add-ons from powlo's addon repository.</description>
    <platform>all</platform>
  </extension>
</addon>